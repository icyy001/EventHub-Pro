generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Event {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  location    String?
  startsAt    DateTime
  endsAt      DateTime
  price       Float?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // lowercased concat used for case-insensitive search on SQLite
  searchIndex String   @default("")

  @@index([searchIndex])
}
